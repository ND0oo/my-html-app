{
  "name": "my-html-app",
  "version": "2.0.0",
  "description": "QtScrcpy映射编辑器",
  "author": "NDooo",
  "main": "main.js",
  "scripts": {
    "clean": "if exist dist rmdir /s /q dist && if exist node_modules rmdir /s /q node_modules",
    "build": "npm run clean && electron-builder"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.0"
  },
  "build": {
    "appId": "com.qtscrcpy.editor",
    "productName": "QtScrcpy映射编辑器",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "extraResources": [
      "icon.png",
      "editor.html",
      "preload.js" // 确保preload.js被包含在构建中
    ],
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "QtScrcpy映射编辑器"
    }
  }
}
